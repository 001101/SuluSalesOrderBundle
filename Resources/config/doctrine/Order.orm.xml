<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Sulu\Bundle\Sales\OrderBundle\Entity\Order" table="so_orders" repository-class="Sulu\Bundle\Sales\OrderBundle\Entity\OrderRepository">

        <field name="sessionId" type="string" column="sessionId" length="255" nullable="true"/>
        <field name="termsOfDeliveryContent" type="string" column="termsOfDeliveryContent" length="255" nullable="true"/>
        <field name="termsOfPaymentContent" type="string" column="termsOfPaymentContent" length="255" nullable="true"/>

        <many-to-one field="termsOfDelivery" target-entity="Sulu\Bundle\ContactBundle\Entity\TermsOfDelivery">
            <join-columns>
                <join-column name="idTermsOfDelivery"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="termsOfPayment" target-entity="Sulu\Bundle\ContactBundle\Entity\TermsOfPayment">
            <join-columns>
                <join-column name="idTermsOfPayment"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="type" target-entity="Sulu\Bundle\Sales\OrderBundle\Entity\OrderType" inversed-by="order">
            <join-columns>
                <join-column name="idOrderTypes" referenced-column-name="id" nullable="true"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="customerAccount" target-entity="Sulu\Bundle\ContactBundle\Entity\Account">
            <join-columns>
                <join-column name="idAccountsCustomer" referenced-column-name="id" on-delete="SET NULL"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="responsibleContact" target-entity="Sulu\Bundle\ContactBundle\Entity\Contact">
            <join-columns>
                <join-column name="idContactsResponsible" referenced-column-name="id" on-delete="SET NULL"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
